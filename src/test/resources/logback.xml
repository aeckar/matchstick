<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./logs/test.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%t] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>
</configuration>